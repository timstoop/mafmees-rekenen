<MafMeesScreenManager>:
    MafMeesMenu:
    MafMeesRekenenLevel:

<MafMeesMenu>:
    name: 'menu'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'MafMees Rekenen'
        Button:
            text: 'Start'
            on_release: app.root.current = 'level'

<MafMeesRekenenLevel>:
    name: 'level'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
            Label:
                id: score
                text: 'Score: ' + str(root.score)
                size_hint_y: None
        Label:
            id: opgave
            font_size: 50
            text: str(root.o1) + " + " + str(root.o2) + " = " + str(root.answer)
        AnimProgressBar:
            id: progressbar
            max: 100
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: '1'
                on_release: root.press_num(1)
            Button:
                text: '2'
                on_release: root.press_num(2)
            Button:
                text: '3'
                on_release: root.press_num(3)
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: '4'
                on_release: root.press_num(4)
            Button:
                text: '5'
                on_release: root.press_num(5)
            Button:
                text: '6'
                on_release: root.press_num(6)
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: '7'
                on_release: root.press_num(7)
            Button:
                text: '8'
                on_release: root.press_num(8)
            Button:
                text: '9'
                on_release: root.press_num(9)
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: '<X'
                on_release: root.press_bs()
            Button:
                text: '0'
                on_release: root.press_num(0)
            Button:
                text: 'Ok'
                on_release: root.press_ok()
